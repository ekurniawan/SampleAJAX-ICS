
@{
    ViewBag.Title = "Index";
}

<h2>Coba Ajax</h2>
<table id="myTable" class="table table-striped">
</table>

<button id="btnGet" class="btn btn-primary">Get Data</button>

@section scripts{

    <script>
        $(document).ready(function () {

            $("#btnGet").click(function () {
                GetData2();
            });

            function GetData() {
                var url = "http://dev.smart-ics.com:212/myhospital/api/BilDsAgama/ListAll";
                $.getJSON(url, function (result) {
                    if (result) {
                        var data = result;
                        var strResult = "";
                        $.each(data, function (key, value) {
                            strResult += value.Kode + " " + value.Nama + "\n";
                        });
                        alert("Hasil : \n" + strResult);
                    }
                    else {
                        alert("Gagal download data !")
                    };
                });
            }

            function InsertRow(data) {
                var newRow = "";
                newRow += "<tr>";
                newRow += "<td>" + data.Kode + "</td>";
                newRow += "<td>" + data.Nama + "</td>";
                newRow += "</tr>";
            }

            function GetData2() {
                var url = "http://dev.smart-ics.com:212/myhospital/api/BilDsAgama/ListAll";
                $.ajax({
                    type: "GET",
                    url: url,
                    datatype: "json",
                    success: function (data) {
                        var strResult = "";
                        $.each(data, function (key, value) {
                            strResult += value.Kode + " " + value.Nama + "\n";
                        });
                        alert("Hasil : \n" + strResult);
                    },
                    error: function (error) {
                        alert("Error : " + error);
                    }
                });
            }
        });
    </script>

}

